{
  "$schema": "https://github.com/softwaremill/fabrica/releases/download/0.0.1/schema.json",
  "networkSettings": {
    "fabricVersion": "2.2.1",
    "tls": false
  },
  "rootOrg": {
    "organization": {
      "name": "Orderer",
      "domain": "root.com"
    },
    "orderer": {
      "type": "solo",
      "instances": 1
    }
  },
  "orgs": [
    {
      "organization": {
        "name": "Org1",
        "domain": "org1.com"
      },
      "peer": {
        "instances": 2,
        "db": "LevelDb"
      }
    }
  ],
  "channels": [
    {
      "name": "my-channel1",
      "orgs": [
        {
          "name": "Org1",
          "peers": [
            "peer0",
            "peer1"
          ]
        }
      ]
    }
  ],
  "chaincodes": [
    {
      "name": "chaincode1",
      "version": "0.0.1",
      "lang": "node",
      "channel": "my-channel1",
      "directory": "./chaincodes/chaincode-kv-node"
    }
  ]
}
