{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./generators"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "generators",
    "src/*/templates",
    "**/*.test.ts",
    "**/*.spec.ts",
    "e2e"
  ]
}
