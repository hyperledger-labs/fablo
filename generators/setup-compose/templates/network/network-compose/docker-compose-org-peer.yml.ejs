  <%= org.peer.prefix %><%= count %>.<%= org.organization.domain %>:
    container_name: <%= org.peer.prefix %><%= count %>.<%= org.organization.domain %>
    image: hyperledger/fabric-peer:${FABRIC_VERSION}
    environment:
      - CORE_VM_ENDPOINT=unix:///host/var/run/docker.sock
      - CORE_PEER_ID=<%= org.peer.prefix %><%= count %>.<%= org.organization.domain %>
      - CORE_LOGGING_PEER=debug
      - CORE_CHAINCODE_LOGGING_LEVEL=debug
      - CORE_PEER_LOCALMSPID=<%= org.organization.name %>MSP
      - CORE_PEER_MSPCONFIGPATH=/etc/hyperledger/msp/peer/
      - CORE_PEER_ADDRESS=<%= org.peer.prefix %><%= count %>.<%= org.organization.domain %>:7051
      - CORE_VM_DOCKER_HOSTCONFIG_NETWORKMODE=${COMPOSE_PROJECT_NAME}_basic
      - CORE_VM_DOCKER_ATTACHSTDOUT=true
      - GODEBUG=netdns=go
    working_dir: /opt/gopath/src/github.com/hyperledger/fabric
    command: peer node start
    ports:
      - 7051:7051
      - 7053:7053
    volumes:
      - /var/run/:/host/var/run/
      - ./crypto-config/peerOrganizations/<%= org.organization.domain %>/peers/<%= org.peer.prefix %><%= count %>.<%= org.organization.domain %>/msp:/etc/hyperledger/msp/peer
      - ./crypto-config/peerOrganizations/<%= org.organization.domain %>/users:/etc/hyperledger/msp/users
      - ./config:/etc/hyperledger/configtx
    depends_on:
      - orderer.softwaremill.com
    networks:
      - basic

