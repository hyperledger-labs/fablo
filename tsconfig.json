{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "rootDir": "./generators",
    "outDir": "./generators-dist",
    "noEmit": false,
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": [
    "generators/**/*"
  ],
  "exclude": [
    "node_modules",
    "generators-dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "e2e"
  ]
}
