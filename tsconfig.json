{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "e2e"
  ],
  "exclude": [
    "node_modules",
    "generators"
  ]
}
