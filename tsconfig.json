{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./generators",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "generators",
    "src/*/templates",
    "**/*.test.ts",
    "**/*.spec.ts",
    "e2e"
  ]
}
